{
  "compileOnSave": false,
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es6",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2016"],
    "types": [],

    "baseUrl": ".",
    "paths": {
      "views": ["src/views"],
      "views*": ["src/views*"],
      "styles": ["src/styles"],
      "styles*": ["src/styles*"],
      "models": ["src/models"],
      "models*": ["src/models*"],
      "components": ["src/components"],
      "components*": ["src/components*"],
      "utils": ["src/utils"],
      "utils*": ["src/utils*"]
    }
  },
  "exclude": ["node_modules"]
}
